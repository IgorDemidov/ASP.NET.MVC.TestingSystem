@using TestingSystem.BLL.Models
@model QuestionModel

@{
    ViewBag.Title = "Test";
}

<h2>@Model.ThemeName</h2>
<hr>
<h3>Вопрос:</h3>

@Model.Text
<form name="answervariants" method="POST">
    <input name="questionId" value="@Model.Id" type="hidden">
    @for (int i = 0; i < @Model.AnswerModels.Count; i++)
    {
        <input id="check_@i" type="checkbox" name="userTrueAnswers" value="@Model.AnswerModels[i].Id"><label for="check_@i">@Model.AnswerModels[i].Text</label>
        <br/>
    }
    <input type="submit" value="Ответить"/>
</form>


